/* -------------------选项卡------------------------- */
.cn_table{
	color: #333;
	font-weight: bold;
	height: 30px;
	line-height: 30px;
}
.cn_table > span{
	display: inline-block;
	padding: 0 10px;
	cursor: pointer;
	margin-right: 20px;
}
.cn_table > span:hover{
	color: #57c6d4;
}
.cn_table > span.on{
	color: #57c6d4;
	border-bottom: 4px solid #57c6d4;
}
/* -------------------选项卡------------------------- */

/* -----------------------查询添加------------------------ */
.dv_query{
	float: left;
	width: 260px;

}
.l_us_query,
.us_query{
	margin-top: 20px;
	height: 30px;
}
.l_us_query > p{
	margin-left: 30px;
	float: left;
}
.l_us_query > p > input{
	margin: 0;
}
.l_us_query > p > button{
	margin: 0 8px;
}
.l_num,
.s_num{
	height: 30px;
	line-height: 30px;
	margin-top: 30px;
	color: #333;
}
.l_num > span,
.s_num > span{
	color: #57c6d4;
	font-size: 14px;
	font-weight: bold;
	margin: 0 8px;
}
.l_num > button,
.s_num > button{
	float: right;
}
.us_nm_query{
	float: left;
	position: relative;
	width: 180px;
	height: 30px;
	margin-left: 30px;
}
.us_nm_query input{
	width: 100%;
	height: 100%;
	border: 1px solid #57c6d4;
	text-indent: 12px;
}
.us_nm_query button{
	width: 30px;
	height: 30px;
	position: absolute;
	right: 0;
}
.us_query > button{
	float: right;
}
/* -----------------------查询添加------------------------ */

/* ------------------------用户信息表------------------------ */
.in_user_table,
.user_table,
.l_user_table,
.w_user_table,
.s_user_table{
	margin-top: 30px;
}
.in_user_table > p,
.l_user_table > p,
.user_table > p,
.w_user_table > p,
.s_user_table > p{
	height: 40px;
	background: #f7f7f7;
	color: #666;
	font-size: 12px;
	font-weight: bold;
	line-height: 40px;
}
.l_user_table .ta_list,
.w_user_table .ta_list,
.user_table .ta_list,
.in_user_table .ta_list{
	height: 200px;
}
.ta_list > li{
	height: 40px;
}
.in_user_table > p > span,
.ta_list > li > span,
.user_table > p > span{
	display: inline-block;
	text-align: center;
	float: left;
}
.t1{
	width: 12.5%;
}
.t2{
	width: 17%;
}
.t3{
	width: 11%;
}
.t4{
	width: 11%;
}
.t5{
	width: 11%;
}
.t6{
	width: 12.5%;
}
.t7{
	width: 25%;
}
.t8{
	width: 230px;
}
.l_user_table:before,
.user_table:before{
	content: '单位（元）';
	float: right;
	color: #57c6d4;
	margin-top: -20px;
}
/*.user_table span{
	width: 14.285%;
}*/
.ta_list > li{
	border-bottom: 1px solid #f7f7f7;
	font-size: 12px;
	line-height: 40px;
}

/* 注册未付费用户 */
.w_user_table > p > span,
.w_user_table span{
	float: left;
	width: 33.33% !important;
	text-align: center;
}
/* 注册未付费用户 */

/* 流失用户 */
.l_user_table > p > span,
.l_user_table span{
	width: 16.666% !important;
	float: left;
	text-align: center;
}
/* 流失用户 */

/* 实名认证 */
.s_user_table span,
.s_user_table > p > span{
	float: left;
	width: 14.285% !important;
	text-align: center;
}
.s_user_table > ul > li{
	height: 80px;
	line-height: 80px;
}
.s_user_table > ul > li > span{
	height: 80px;
}
.s_user_table > ul > li > span > img{
	width: 62px;
}
.s_user_table > ul > li > span > i{
	margin: 0;
}
/* 实名认证 */


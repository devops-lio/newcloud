/* 手动注册 */
.sex{
	width: 260px;
	height: 30px;
	line-height: 30px;
	margin: 20px auto;
}
.sex > span{
	width: 164px;
	height: 30px;
	float: right;
	display: inline-block;
}
.sex > span > i{
	display: inline-block;
	width: 50%;
	text-align: center;
	position: relative;
	cursor: pointer;
}
.sex > span > i:before{
	position: absolute;
	width: 13px;
	height: 13px;
	display: inline-block;
	content: '';
	border: 2px solid #57c6d4;
	border-radius: 50%;
	left: 3px;
	top: 8px;
}
.sex > span > i.on:after{
	content: '';
	display: inline-block;
	position: absolute;
	width: 7px;
	height: 7px;
	background: #57c6d4;
	border-radius: 50%;
	left: 8px;
	top: 13px;
}
.imgShow{
	width: 400px;
	position:absolute;
	left:50%;
	bottom:30%;
	margin-left:-200px;
	text-align: center;
	display:none;
	
}
.marked{
	font-size:18px;
	color:#45BACA;
	margin-top:10px;
}
/* 手动注册 */
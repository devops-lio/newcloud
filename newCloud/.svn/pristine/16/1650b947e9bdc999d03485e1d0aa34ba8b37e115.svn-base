.placePullDown{
	width: 267px;
	height: 32px;
	margin-top: 45px;
	margin-left: 45px;
	color: #666;
	font-size: 12px;
	line-height: 32px;
	position: relative;
}
.placePullDown > span{
	width: 151px;
	height: 30px;
	border: 1px solid #ccc;
	display: inline-block;
	float: right;
	background: url(../img/down.png) no-repeat 135px;
	background-size: 10px;
	cursor: pointer;
	text-align: center;
}
.placePullDown > ul{
	position: absolute;
	top: 38px;
	right: 0;
	width: 153px;
	background: #f0f0f0;
	display: none;
}
.placePullDown > ul > li{
	width: 100%;
	height: 32px;
	cursor: pointer;
	text-align: center;
	line-height: 32px;
}
.placePullDown > ul > li:hover{
	background: #e6e6e6;
}
.deviceDetailInfo{
	margin-top: 45px;
	margin-left: 45px;
	color: #666;
	font-size: 12px;
	line-height: 32px;
}
.deviceDetailInfo > p{
	float: left;
	line-height: 32px;
	margin-top: 10px;
}
.inputs{
	width: 585px;
	display: inline-block;
	margin-left: 30px;
}
.addInput{
	width: 252px;
	height: 30px;
	text-align: left !important;
	text-indent: 20px;
	margin: 10px;
}
.inputs > p{
	color: red;
	text-align: right;
	margin-right: 45px;
}
input[disabled], select[disabled], textarea[disabled], input[readonly],
	select[readonly], textarea[readonly]  .timeStyle {
	cursor: pointer;
	background-color: #fff;
	margin-bottom: 0px;
}

.alert-solarsys {
	color: #23868D;
	background-color: #B4EBEF;
	border-color: #28AEB9;
}

#tip {
	position: fixed;
	width: 180px;
	border: 1px solid #d3d3d3;
	background: #fff;
	display: none;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	overflow: hidden;
	border-radius: 5px;
	-moz-box-shadow: 1px 1px 2px rgba(0, 0, 0, .2);
	-webkit-box-shadow: 1px 1px 2px rgba(0, 0, 0, .2);
	box-shadow: 1px 1px 2px rgba(0, 0, 0, .2);
	padding-top: 0px;
}

#tip h4 {
	height: 28px;
	line-height: 28px;
	padding-left: 6px;
	background: #f0f0f0;
	margin-top: 0px;
}

#tip p {
	line-height: 24px;
	padding: 2px 4px
}
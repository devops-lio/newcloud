/* 收款账号列表 */
.sk_info{
	width: 100%;
	color: #666;
	font-size: 12px;
}
.sk_info > p{
	background: #f4f4f4;
	font-weight: bold;
	height: 40px;
	line-height: 40px;
}
.sk_info span{
	display: inline-block;
	width: 33.333%;

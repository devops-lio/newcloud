/* 资料显示 */
.inform{
	width: 100%;
	margin-top: 10px;
	height: 210px;
	font-size: 12px;
	border-bottom: 2px solid #c9edf1;
	color: #666;
}
.inform > div{
	width: 50%;
	height: 50px;
	float: left;
	margin: 10px 0;
	line-height: 50px;
}
.inform > div label{
	width: 20%;
	height: 50px;
	display: inline-block;
	text-align: right;
}
.inform > div span{
	width: 75%;
	display: inline-block;
	height: 50px;
	text-align: left;
	float: right;
}
.inform > div img{

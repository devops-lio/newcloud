
.label{
	width: 240px;
	height: 34px;
	margin-left: 2%;
	margin-top: 30px;
}
.label > li{
	float: left;
	width: 118px;
	height: 32px;
	border: 1px solid #ccc;
	text-align: center;
	line-height: 34px;
	cursor: pointer;
	color: #ccc;
}
.label > li:hover{
	color: #999;
}
.label > li.on{
	width: 120px;
	height: 34px;
	background: #57c6d4;
	color: #fff;
	border: none;
}
.label > li.on:hover{
	background: #5bd2e1;
}
hr{
	width: 100%;
	margin-left: 2%;
	height: 6px;
	border: none;
	background: #e6e6e6;
	margin-top: 8px;
}
.surplus{
	width: 100%;
	height: 50px;
	border-bottom: 4px solid #e6e6e6;
	border-top: 4px solid #e6e6e6;
	background: #f5f5f5;
	color: #999;
	text-align: center;
	line-height: 50px;
	font-size: 18px;
	letter-spacing: 1px;
	margin: 5px 0 10px 2%;
	position: relative;
}

.surplus > span{
	color: #54cc47;
	margin: 0 8px;
}
.surplus > em{
	position: absolute;
	font-style: normal;
	color: #54cc47;
	top: 0px;
	font-size: 24px;
	display: none;
	right: 540px;
}
.details{
	width: 100%;
	height: 400px;
	margin-left: 2%;
	border-bottom: 4px solid #e6e6e6;
	position: relative;
}
.details > img{
	position: absolute;
	top: 20px;
	left: 150px;
	display: none;
	z-index: 5;
}
.details > div{
	width: 300px;
	height: 380px;
	float: left;
	margin-left: 20px;
	position: relative;
}
.details > div > h6{
	color: #4c4c4c;
}
.image{
	width: 100%;
	height: 96%;
	border: 2px solid #ccc;
	margin-top: 6px;
	
}
.details > div > button{
	position: absolute;
	top: 50%;
	width: 30px;
	height: 30px;
	border: none;
	display: none;
	border-radius: 50%;
	margin-top: -15px;
	cursor: pointer;
}
.details > div:hover > button{
	display: block;
}
.image.rotate0{
	transform:rotate(0deg);
}
.image.rotate90{
	transform:rotate(90deg);
}
.image.rotate270{
	transform:rotate(270deg);
}
.image.rotate180{
	transform:rotate(180deg);
}
.userinfo{
	margin-left: 0px !important;
}
.userinfo > p{
	width: 100%;
	height: 40px;
	line-height: 40px;
	padding-left: 30px;
}
.userinfo > p > label{
	color: #999;
}
.userinfo > p > span{
	color: #333;
}
.phone{
	background: url(../img/phone.png) no-repeat left;
}
.name{
	background: url(../img/personagegreen.png) no-repeat left;
}
.userId{
	background: url(../img/userId.png) no-repeat left;
}
.userPhoto{
	margin-left: 80px !important;
}
.userPhoto > p{
	background: url(../img/poto.png) no-repeat center;
	background-size: contain;
}
.identityCard > p{
	background: url(../img/poto.png) no-repeat center;
	background-size: contain;
}
.anticlockwise{
	left: 0;
	background: rgba(0,0,0,0.6) url(../img/rotate.png) no-repeat;
}
.clockwise{
	right: 0;
	background: rgba(0,0,0,0.6) url(../img/rotate.png) no-repeat;
	background-position: 0 -30px;
}
.operation{
	margin-top: 10px;
	margin-left: 2%;
}
.operation button{
	width: 130px;
	height: 30px;
	cursor: pointer;
}
.pass{
	border: none;
	background: #57c6d4;
	color: #fff;
}
.pass:hover{
	background: #5bd2e1;
}
.fail{
	border: 1px solid #57c6d4;
	color: #57c6d4;
	background: none;
	margin-left: 20px;
}
.fail:hover{
	border: 1px solid #5bd2e1;
	color: #5bd2e1;
}
#binding{
	width: 327px;
	height: 279px;
	margin: 70px auto;
}
#binding > p{
	width: 100%;
	height: 55px;
	line-height: 55px;
	font-size: 12px;
	position: relative;
}
#binding > p > label{
	float: left;
}
#binding > p > input{
	float: right;
	width: 220px;
	height: 30px;
	margin-top: 10px;
}
#binding > p > button{
	width: 100%;
	height: 30px;
	border: none;
	background: #57c6d4;
	color: #fff;
	font-size: 12px;
	cursor: pointer;
	margin-top: 12px;
}
#binding > p > span{
	position: absolute;
	left: 108px;
	top: 25px;
}
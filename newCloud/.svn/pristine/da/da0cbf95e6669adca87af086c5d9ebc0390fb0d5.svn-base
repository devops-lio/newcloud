@CHARSET "UTF-8";

element.style {
	text-align: center;
}

body {
	font: 13px/1.7em 'Open Sans', arial, sans-serif;
}

div {
	display: block;
}

.pages {
	width: 946px;
	height: auto;
}

.mobile_first {
	width: 800px;
	height: 700px;
}

.mobile_first .mobile_first_left {
	width: 320px;
	position: relative;
	height: 674px;
	background: url(../../../../img/decorate/iphone5.png) 0 0 no-repeat;
	overflow: hidden;
	
}

.mobile_wrap {
	position: absolute;
	overflow: hidden;
	width: 274px;
	height: 486px;
	overflow: hidden;
	top: 96px;
	left: 25px;
}

.fl {
	float: left;
}

.mobile_shop_info {
	width: 100%;
	height: auto;
	position: absolute;
	top: 10%;
	left: 0;
	overflow: hidden;
	z-index: 10;
}

.mobile_wrap ul#window_bg2 {
	display: block;
	margin: 0 auto;
	overflow: hidden;
	top: 32px;
}

.mobile_wrap ul#shade {
	display: block;
	margin: 0 auto;
	overflow: hidden;
	background-color: #333333;
	position: absolute;
	z-index: 100;
	filter: alpha(opacity = 50);
	opacity: 0.5;
	color: white;
	padding-left: 10px;
}

.mobile_first .mobile_first_right {
	width: 480px;
	height: 674px;
}

.mobile_first .mobile_first_right .editText {
	width: 460px;
	height: 604px;
	 overflow:auto;
	background: #FFFFFF url(../../../../img/decorate/main_menu_bg.gif) 0 0 repeat;
	-moz-border-radius: 15px;
	-khtml-border-radius: 15px;
	-webkit-border-radius: 15px;
	border-radius: 15px;
	behavior: url(pie.htc);
	border: 1px #cccccc solid;
	margin-top: 10px;
	padding: 30px 20px;
	position: relative;
	margin-left:25px;
}

 .arrow2 {
	width: 15px;
	height: 34px;
	position: absolute;
	background: url(../../../../img/decorate/arrow2.png) 0 0 no-repeat;
	top: 203px;
	left: 346px;
	
}

.faq-number {
	float: left;
	height: 24px;
	width: 24px;
	line-height: 24px;
}

.faq-number {
	width: 32px;
	height: 32px;
	font-size: 14px;
	font-weight: 600;
	text-align: center;
	line-height: 32px;
	color: #FFF;
	background: #2EAFBB;
	border: 3px solid #FFF;
	box-shadow: 1px 1px 3px rgba(0, 0, 0, .4);
	border-radius: 100px;
	text-shadow: 1px 1px 2px rgba(0, 0, 0, .4);
}

.zxImgUlDiv {
	margin: 20px 0px;
}

.zxImgUlDiv input {
	margin-left: 10px;
}

input {
	font: 13px/1.7em 'Open Sans', arial, sans-serif;
}

.i1 {
	font-size: 2em;
	margin-left: 10px;
	color: silver;
}

.checkbox,.radio {
	position: relative;
	padding-left: 32px;
	margin-bottom: 12px;
	font-size: 14px;
	line-height: 1.5;
	-webkit-transition: color .25s linear;
	transition: color .25s linear;
}

.radio input[type="radio"],.checkbox input[type="checkbox"] {
	float: left;
	margin-left: -18px;
}

.checkbox .icons,.radio .icons {
	position: absolute;
	top: 0;
	left: 0;
	display: block;
	width: 20px;
	height: 20px;
	font-size: 20px;
	line-height: 20px;
	color: #bdc3c7;
	text-align: center;
	cursor: pointer;
}

.radio.inline,.checkbox.inline {
	display: inline-block;
	padding-top: 5px;
	margin-bottom: 0;
	vertical-align: middle;
}
#load_images {
  width: 900px;
  height: 596px;
}
